      <div uk-grid>
        {% for product in products %}
        <div class="uk-card uk-card-default">
            <div class="uk-card-header">
                <img src="{{ product.picture }}" alt="{{ product.name }}">
            </div>
            <div class="uk-card-body" style="max-width: 200px;">
              <h3>{{ product.name }}</h3>
              <p>
                {{ product.description }}
              </p>
